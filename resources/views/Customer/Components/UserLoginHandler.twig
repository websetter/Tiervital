<!-- Insert markup for user login handler here -->
<script type="x/template" id="vue-user-login-handler">
    <div id="login-change">
        <div class="dropdown" v-if="isLoggedIn">
            <a href="#" class="dropdown-toggle" id="accountMenuList" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user" aria-hidden="true"></i>
                <span class="hidden-small">{{ trans("Ceres::Template.myAccount") }}</span>
            </a>
            <div class="account-menu dropdown-menu dropdown-menu-right small hidden-small">
              <div class="list-group" aria-labelledby="accountMenuList" >
                <a href="/my-account" class="list-group-item small"><i class="fa fa-user"></i> {{ trans("Ceres::Template.myAccount") }}</a>
                <a href="#" class="list-group-item small" v-logout><i class="fa fa-sign-out"></i> {{ trans("Ceres::Template.loginLogout") }}</a>
              </div>
            </div>
        </div>
        <div v-if="!isLoggedIn">
            <a data-toggle="modal" href="{% if services.template.isCurrentTemplate("tpl.login") %}javascript:void(0){% else %}#login{% endif %}" @click="unmarkInputFields()">
                <i class="fa fa-user" aria-hidden="true"></i>
                <span class="hidden-small">{{ trans("Tiervital::Template.meinShop") }}</span>
            </a>
            <span class="pipe"></span>
            <a class="hidden-small" data-toggle="modal" href="#registration" @click="unmarkInputFields()">
                <span class="hidden-xs-down">{{ trans("Ceres::Template.loginRegister") }}</span>
            </a>
        </div>
    </div>
</script>
