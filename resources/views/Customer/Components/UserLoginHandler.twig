<!-- Insert markup for user login handler here -->
<script type="x/template" id="vue-user-login-handler">
    <div id="login-change">
        <div v-if="isLoggedIn">
            <a href="/my-account" id="accountMenu"><i class="fa fa-user"></i><span class="hidden-small"> {{ trans("Ceres::Template.myAccount") }}</span></a>
              <span class="pipe hidden-small"></span>
            <a href="#" id="accountLogout" v-logout><i class="fa fa-sign-out"></i> <span class="hidden-small">{{ trans("Ceres::Template.loginLogout") }}</span></a>
        </div>
        <div v-if="!isLoggedIn">
            <a data-toggle="modal" href="{% if services.template.isCurrentTemplate("tpl.login") %}javascript:void(0){% else %}#login{% endif %}" @click="unmarkInputFields()">
                <i class="fa fa-user" aria-hidden="true"></i>
                <span class="hidden-small">{{ trans("Ceres::Template.myAccount") }}</span>
            </a>
            <span class="pipe hidden-small"></span>
            <a  data-toggle="modal" href="#registration" @click="unmarkInputFields()">
              <i class="fa fa-user-plus" aria-hidden="true"></i>
                <span class="hidden-small">{{ trans("Ceres::Template.loginRegister") }}</span>
            </a>
        </div>
    </div>
</script>
