{% set isNameEmpty = trans("Tiervital::Template.itemList" ~ itemListNo ~ "ListName") == 'Name' or
                     trans("Tiervital::Template.itemList" ~ itemListNo ~ "ListName") is empty %}

{% if listType == "last_seen" %}
    {% if isNameEmpty %}
        {% set header = trans("Tiervital::Template.itemListLastSeen") %}
    {% else %}
        {% set header = trans("Tiervital::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% elseif listType == "cross_selling" %}
    {% if isNameEmpty %}
        {% set header = trans("Tiervital::Template.itemListX" ~ config("Tiervital.item.lists.cross_selling_type")) %}
    {% else %}
        {% set header = trans("Tiervital::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% elseif listType == "tag_list" %}
    {% if isNameEmpty %}
        {% set header = "Tags" %}
    {% else %}
        {% set header = trans("Tiervital::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% endif %}

{% if isHome %}
    <div class="section-header">
        <h2>{{ header }}</h2>
    </div>
{% else %}
  <div class="col-xs-12">
    <h2>Weitere Produkte</h2>
  </div>
{% endif %}
