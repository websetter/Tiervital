{% set isNameEmpty = trans("Tiervital::Template.itemList" ~ itemListNo ~ "ListName") == 'Name' or
                     trans("Tiervital::Template.itemList" ~ itemListNo ~ "ListName") is empty %}

{% if listType == "last_seen" %}
    {% if isNameEmpty %}
        {% set header = trans("Ceres::Template.itemListLastSeen") %}
    {% else %}
        {% set header = trans("Ceres::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% elseif listType == "cross_selling" %}
    {% if isNameEmpty %}
        {% set header = trans("Ceres::Template.itemListX" ~ config("Ceres.item.lists.cross_selling_type")) %}
    {% else %}
        {% set header = trans("Ceres::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% elseif listType == "tag_list" %}
    {% if isNameEmpty %}
        {% set header = "Tags" %}
    {% else %}
        {% set header = trans("Ceres::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% endif %}

{% if isHome %}
    <div class="section-header">
        <h2>{{ header }}</h2>
    </div>
{% else %}
    <h3>
        {{ header }}
    </h3>
{% endif %}
